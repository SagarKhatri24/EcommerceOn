<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EcommerceOn" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/cantata_one</item>
    </style>

    <style name="Theme.EcommerceOn" parent="Base.Theme.EcommerceOn" />

    <style name="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="edit_15" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_40</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="text_15" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black_40</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="button_16" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white_40</item>
    </style>

</resources>